.content {
  background-color: #F2F2F2;
  padding-bottom: 60rpx;
  z-index: -2;
}
.content .bgcBox {
  width: 750rpx;
  height: 500rpx;
  z-index: -1;
}
.content .bgcBox image {
  width: 750rpx;
  height: 500rpx;
}
.content .userInfoBox {
  background-color: white;
  position: relative;
  width: 700rpx;
  height: 400rpx;
  margin: 0 auto;
  margin-top: -80rpx;
  z-index: 2;
  background-color: #FFFFFF;
  border-radius: 5%;
  display: flex;
  flex-flow: column nowrap;
}
.content .userInfoBox .userInfoBox_up, .content .userInfoBox .userInfoBox_down {
  width: 700rpx;
  height: 200rpx;
  border-radius: 5%;
  display: flex;
  flex-flow: row nowrap;
}
.content .userInfoBox .userInfoBox_up .uibu_left, .content .userInfoBox .userInfoBox_down .uibu_left {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  margin-left: 20rpx;
}
.content .userInfoBox .userInfoBox_up .uibu_left .avator, .content .userInfoBox .userInfoBox_down .uibu_left .avator {
  border: 4px solid #FFFFFF;
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
  position: absolute;
  top: -40rpx;
  background-color: black;
  z-index: 2;
}
.content .userInfoBox .userInfoBox_up .uibu_left .avator image, .content .userInfoBox .userInfoBox_down .uibu_left .avator image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50%;
}
.content .userInfoBox .userInfoBox_up .uibu_left .membership_level, .content .userInfoBox .userInfoBox_down .uibu_left .membership_level {
  width: 150rpx;
  height: 40rpx;
  position: absolute;
  top: 130rpx;
  z-index: 3;
  background-color: #FFF9E0;
  text-align: center;
  color: #9F500A;
}
.content .userInfoBox .userInfoBox_up .uibu_right, .content .userInfoBox .userInfoBox_down .uibu_right {
  width: 460rpx;
  height: 200rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  margin-left: 20rpx;
}
.content .userInfoBox .userInfoBox_up .uibu_right .uibu_right_up, .content .userInfoBox .userInfoBox_down .uibu_right .uibu_right_up {
  margin-bottom: 10rpx;
}
.content .userInfoBox .userInfoBox_up .uibd, .content .userInfoBox .userInfoBox_down .uibd {
  width: 233.3rpx;
  height: 200rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}
.content .userInfoBox .userInfoBox_up .uibd .uibd_title, .content .userInfoBox .userInfoBox_down .uibd .uibd_title {
  font-size: 40rpx;
  color: #FB003B;
}
.content .userInfoBox .userInfoBox_up .uibd .uibd_subtitle, .content .userInfoBox .userInfoBox_down .uibd .uibd_subtitle {
  font-size: 30rpx;
  color: #333333;
}
.content .function {
  background-color: white;
  width: 700rpx;
  height: 400rpx;
  border-radius: 5%;
  margin: 40rpx auto;
}
.content .function .function_title {
  padding-left: 20rpx;
  height: 80rpx;
  font-size: 35rpx;
  line-height: 80rpx;
}
.content .function .functionBox {
  width: 700rpx;
  height: 300rpx;
  display: flex;
  flex-flow: row wrap;
}
.content .function .functionBox .functionBoxChoose {
  width: 170rpx;
  height: 150rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}
.content .function .functionBox .functionBoxChoose .functionBox_icon {
  color: #FC3B6D;
}
.content .function .functionBox .functionBoxChoose .functionBox_icon ._span {
  font-size: 60rpx;
  font-weight: bold;
}
.content .function .functionBox .functionBoxChoose .functionBox_title {
  margin-top: 10rpx;
  font-size: 25rpx;
}
.content .verizon {
  text-align: center;
  font-size: 30rpx;
  color: #A0A0A0;
