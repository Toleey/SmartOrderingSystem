.content {
  margin-bottom: 30rpx;
}
.content .carousel_img swiper {
  width: 750rpx;
  height: 500rpx;
}
.content .carousel_img swiper image {
  width: 100%;
  height: 100%;
}
.content .orderBox {
  box-shadow: 0 6px 9px 3px #DFDFDF;
  margin: -40rpx auto;
  width: 700rpx;
  height: 400rpx;
  border-radius: 5%;
  background-color: #FFFFFF;
  position: relative;
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
}
.content .orderBox .orderBox_left {
  height: 400rpx;
  width: 350rpx;
  font-size: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-flow: column nowrap;
  border-right: 1px solid #ECECEC;
}
.content .orderBox .orderBox_left .orderBox_left_words01 {
  color: #2C2C2C;
  font-weight: bold;
  font-size: 50rpx;
}
.content .orderBox .orderBox_left .orderBox_left_words02 {
  color: #B5B5B5;
  font-size: 26rpx;
}
.content .orderBox .orderBox_right {
  height: 400rpx;
  width: 350rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.content .orderBox .orderBox_right image {
  height: 350rpx;
  width: 350rpx;
}
.content .chooseBox {
  margin-top: 80rpx;
  width: 750rpx;
  display: flex;
  flex-flow: row nowrap;
}
.content .chooseBox .prd_Content {
  margin: 0 auto;
  width: 700rpx;
  display: flex;
  flex-flow: row nowrap;
}
.content .chooseBox .prd_Content .prd {
  margin: 0 auto;
  box-shadow: 0 0 9px 3px #DFDFDF;
  width: 220rpx;
  height: 300rpx;
  border-radius: 5%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.content .chooseBox .prd_Content .prd .prdBox {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
  align-items: center;
}
.content .chooseBox .prd_Content .prd .prdBox .prdBox_title {
  width: 200rpx;
  height: 60rpx;
  text-align: center;
  font-weight: bold;
  font-size: 36rpx;
}
.content .chooseBox .prd_Content .prd .prdBox .prdBox_subtitle {
  width: 200rpx;
  height: 40rpx;
  text-align: center;
  font-size: 20rpx;
  color: #9F9F9F;
}
.content .chooseBox .prd_Content .prd .prdBox .prdBox_icon {
  width: 200rpx;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.content .chooseBox .prd_Content .prd .prdBox .prdBox_icon ._span {
  font-size: 50rpx;
  font-weight: bold;
}
.content .myPoints {
  width: 750rpx;
  height: 300rpx;
  margin-top: 40rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}
.content .myPoints .myPointsBox {
  box-shadow: 0 0 9px 3px #DFDFDF;
  width: 700rpx;
  height: 300rpx;
  border-radius: 5%;
  display: flex;
  flex-flow: row nowrap;
}
.content .myPoints .myPointsBox .myPointsBox_left {
  width: 470rpx;
  height: 300rpx;
  border-radius: 5%;
  margin-left: 30rpx;
  display: flex;
  flex-flow: column nowrap;
  justify-content: center;
}
.content .myPoints .myPointsBox .myPointsBox_left .myPointsBox_title {
  color: #262626;
}
.content .myPoints .myPointsBox .myPointsBox_left .myPointsBox_title .myPointsBox_title_num {
  color: red;
  font-size: 50rpx;
  margin-left: 10rpx;
}
.content .myPoints .myPointsBox .myPointsBox_left .myPointsBox_subtitle {
  color: #878787;
}
.content .myPoints .myPointsBox .myPointsBox_right {
  width: 200rpx;
  height: 300rpx;
  border-radius: 5%;
  display: flex;
  justify-content: center;
  align-items: center;
}
.content .myPoints .myPointsBox .myPointsBox_right ._span {
  font-size: 100rpx;
  font-weight: bold;
}

