page {
  height: 100%;
  padding-bottom: 1393rpx;
}
.a {
  height: 100%;
}
.headerBox {
  border: 1px solid black;
  height: 55px;
  width: 100%;
  display: flex;
  flex-flow: column nowrap;
  text-align: left;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
}
.headerBox .shop_name {
  border: 1px solid black;
  padding-left: 30rpx;
  font-size: 40rpx;
  font-weight: bold;
  color: #767676;
}
.headerBox .shop_location {
  border: 1px solid black;
  padding-left: 30rpx;
  font-size: 30rpx;
}
.contentBox {
  border: 1px solid black;
  height: 80vh;
  display: flex;
}
.contentBox .left {
  border: 1px solid black;
  width: 150rpx;
}
.contentBox .left .left_box {
  display: flex;
  flex-flow: column nowrap;
  align-items: center;
  justify-content: center;
  margin-top: 10rpx;
}
.contentBox .left .left_box .left_img {
  border: 1px solid black;
  width: 100rpx;
  height: 100rpx;
}
.contentBox .left .left_box .left_title {
  border: 1px solid black;
  font-weight: bolf;
  font-size: 30rpx;
}
.contentBox .left .active {
  color: #FFFFFF;
  background-color: #A30007;
}
.contentBox .right {
  border: 1px solid black;
  width: 530rpx;
  margin: 0 auto;
}
.contentBox .right .right_box {
  border: 1px solid black;
  display: flex;
  margin-top: 20rpx;
}
.contentBox .right .right_box .right_box_left {
  border: 1px solid black;
  width: 159rpx;
  height: 159rpx;
}
.contentBox .right .right_box .right_box_left .right_img {
  width: 159rpx;
  height: 159rpx;
}
.contentBox .right .right_box .right_box_right {
  border: 1px solid black;
  height: 159rpx;
  width: 371rpx;
}
.contentBox .right .right_box .right_box_right .right_box_right_title {
  border: 1px solid black;
  font-weight: 900;
  font-size: 33rpx;
}
.contentBox .right .right_box .right_box_right .right_box_right_desc {
  border: 1px solid black;
  font-weight: 300;
  font-size: 25rpx;
  color: #A8A8A8;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.contentBox .right .right_box .right_box_right .right_box_right_down {
  border: 1px solid black;
  display: flex;
  justify-content: space-between;
  margin-top: 30rpx;
}
.contentBox .right .right_box .right_box_right .right_box_right_down .right_box_right_down_price .rbrdpn, .contentBox .right .right_box .right_box_right .right_box_right_down .right_box_right_down_price .rbrdpi {
  color: #DE0E21;
}
.contentBox .right .right_box .right_box_right .right_box_right_down .right_box_right_down_price .rbrdpw {
  color: #A9A9A9;
}
.contentBox .right .right_box .right_box_right .right_box_right_down .right_box_right_down_icon {
  border: 1px solid black;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
}
.contentBox .right .right_box .right_box_right .right_box_right_down .right_box_right_down_icon .rbrdi {
  width: 50rpx;
  height: 50rpx;
}
.shoppingList {
  position: fixed;
  bottom: 90rpx;
