.item-box {
  width: 680rpx;
  min-height: 600rpx;
  background-color: white;
  margin: 30rpx auto;
  border-radius: 3%;
  padding: 10rpx 0 40rpx 0;
}
.item-box .item {
  margin-top: 20rpx;
  border: 1px solid black;
  width: 680rpx;
  height: 200rpx;
  display: flex;
}
.item-box .item .item01 {
  height: 200rpx;
  width: 200rpx;
}
.item-box .item .item01 image {
  border: 1px solid black;
  width: 200rpx;
  height: 200rpx;
}
.item-box .item .item02 {
  border: 1px solid black;
  display: flex;
  flex-flow: column nowrap;
  width: 380rpx;
  height: 200rpx;
  line-height: 90rpx;
  text-align: center;
}
.item-box .item .item02 .item02-title {
  border: 1px solid black;
  width: 380rpx;
  height: 100rpx;
}
.item-box .item .item02 .item02-desc {
  border: 1px solid black;
  width: 380rpx;
  height: 100rpx;
}
.item-box .item .item03 {
  border: 1px solid black;
  width: 100rpx;
  line-height: 200rpx;
  text-align: center;
}

